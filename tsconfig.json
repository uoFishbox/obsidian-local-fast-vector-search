{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2020", 
    "types": [
      "obsidian-typings",
      "jest"
    ],
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strict": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "WebWorker" 
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
